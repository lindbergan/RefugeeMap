<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/drawer_textcenter"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/colorAccent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="@dimen/drawer_icons_dim"
        android:layout_height="@dimen/drawer_icons_dim"
        android:id="@+id/drawer_list_item_icon"
        android:layout_marginStart="@dimen/drawer_icons_margin"
        android:layout_marginTop="@dimen/drawer_icons_margin"
        android:layout_marginBottom="@dimen/drawer_icons_margin"/>


    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_list_item_title"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:ellipsize="end"
    />


</LinearLayout>




